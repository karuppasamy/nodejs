{
  "development": {
    "main": {
      "adapter": "postgres",
      "host": "{{= env.OPENSHIFT_POSTGRESQL_DB_HOST || 'localhost' }}",
      "port": "{{= env.OPENSHIFT_POSTGRESQL_DB_PORT || 5432 }}",
      "user": "{{= env.OPENSHIFT_POSTGRESQL_DB_USERNAME || 'postgres' }}",
      "password": "{{= env.OPENSHIFT_POSTGRESQL_DB_PASSWORD || '' }}",
      "database": "{{= env.OPENSHIFT_GEAR_NAME || 'tweet_api_development' }}"
    }
  }
}
